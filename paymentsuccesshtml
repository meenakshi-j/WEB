<body>
    <div class="success-container">
        <h1>Payment Successful!</h1>
        <p>Your payment for room booking was successful. Thank you for your payment.</p>
        <p id="paymentMethodMessage"></p>

        <!-- Button to return to the main page -->
        <div class="button-container">
            <button class="button" onclick="redirectToMain()">Go to Main Page</button>
        </div>
    </div>

    <script>
        // Extract the payment method from the URL query parameters
        const urlParams = new URLSearchParams(window.location.search);
        const paymentMethod = urlParams.get('method');

        // Display payment method in the success message
        if (paymentMethod) {
            document.getElementById('paymentMethodMessage').textContent = `You used ${paymentMethod} for the payment.`;
        }

        // Redirect to the main page
        function redirectToMain() {
            window.location.href = 'main.html'; // Redirect to main page
        }
    </script>
</body>
